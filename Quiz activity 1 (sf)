x = 0
print ("What is the chemical symbol for water?")
a = input(f"A:Wo \nB:Wa \nC:H₂O \nD:HO₂ \nEnter: ")
if a.lower() == "c" or a.lower() == "H2O":
    print("CORRECT!")
    x = x + 1
else:
    print("Incorrect")

print("Which of the following is the largest planet in our solar system?")
b = input(f"A:Mars \nB:Saturn \nC:Jupiter \nD:Neptune\nEnter:")
if b.lower() == "c" or b.lower() == "Jupiter":
    print("Correct!")
    x = x + 1
else:
    print("Incorrect!")

